<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_main"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione un Platillo"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/cafe"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_bebidas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bebidas"
        android:textSize="20sp"
        android:backgroundTint="@color/btn_primary"
        android:textColor="@color/secondary_text"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/gelatina"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_postres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Postres"
        android:textSize="20sp"
        android:backgroundTint="@color/btn_primary"
        android:textColor="@color/secondary_text"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/ensalada"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_ensaladas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ensaladas"
        android:textSize="20sp"
        android:backgroundTint="@color/btn_primary"
        android:textColor="@color/secondary_text"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/pescado"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_mariscos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mariscos"
        android:textSize="20sp"
        android:backgroundTint="@color/btn_primary"
        android:textColor="@color/secondary_text"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/pollo"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_carnes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/btn_primary"
        android:text="Carnes"
        android:textColor="@color/secondary_text"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_salir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:textSize="20sp"
        android:backgroundTint="@color/btn_secondary"
        android:textColor="@color/secondary_text" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
